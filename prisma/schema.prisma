generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int               @id @default(autoincrement())
  firstName     String
  lastName      String
  fullName      String?
  username      String?           @unique
  nationalCode  String?           @unique
  email         String            @unique
  phone         String?           @unique
  password      String
  gender        String?
  birthDate     DateTime?
  province      String?
  city          String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  lifeStage     String?           @default("user")
  childAdmins   ChildAdmin[]
  invitations   ChildInvitation[]
  savedArticles SavedArticle[]
}

model Child {
  id          Int               @id @default(autoincrement())
  fullName    String?
  gender      String?
  birthDate   DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  admins      ChildAdmin[]
  invitations ChildInvitation[]
  growth      GrowthMetric[]
  testResults TestResult[]
}

model GrowthMetric {
  id                Int      @id @default(autoincrement())
  childId           Int
  height            Float?
  weight            Float?
  headCircumference Float?
  measuredAt        DateTime @default(now())
  child             Child    @relation(fields: [childId], references: [id])
}

model Test {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  category    String?
  createdAt   DateTime     @default(now())
  results     TestResult[]
}

model TestResult {
  id          Int      @id @default(autoincrement())
  testId      Int
  childId     Int
  resultValue String?
  score       Int?
  createdAt   DateTime @default(now())
  child       Child    @relation(fields: [childId], references: [id])
  test        Test     @relation(fields: [testId], references: [id])
}

model Article {
  id        Int            @id @default(autoincrement())
  title     String
  slug      String         @unique
  category  String?
  image     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  savedBy   SavedArticle[]
}

model SavedArticle {
  id        Int      @id @default(autoincrement())
  userId    Int
  articleId Int
  savedAt   DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model ChildAdmin {
  id        Int      @id @default(autoincrement())
  childId   Int
  userId    Int
  role      String
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([childId, userId])
}

model ChildInvitation {
  id         Int       @id @default(autoincrement())
  childId    Int
  inviterId  Int?
  email      String?
  phone      String?
  token      String    @unique
  expiresAt  DateTime
  accepted   Boolean   @default(false)
  acceptedAt DateTime?
  createdAt  DateTime  @default(now())
  // ✅ NEW: نقش و جایگاه در درختواره
  relationType String  @default("relative") // e.g. "khale", "dayi", "aunt", "uncle", "friend", "relative"
  slot         Int      @default(0)   // 0,1,2... برای خاله اول/دوم/سوم
  roleLabel    String?  // e.g. "خاله" (اختیاری برای UI)
  child      Child     @relation(fields: [childId], references: [id], onDelete: Cascade)
  inviter    User?     @relation(fields: [inviterId], references: [id])

  @@index([childId])
  @@index([inviterId])
  @@index([email])
  @@index([phone])
  @@index([relationType])
}
