// Prisma Schema Genino

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

// مدل کاربر (والدین ژنینو)
model User {
  id            Int       @id @default(autoincrement())

  // اطلاعات هویتی
  firstName     String
  lastName      String
  fullName      String?
  username      String?  @unique
  nationalCode  String?  @unique

  // اطلاعات تماس
  email         String   @unique
  phone         String?  @unique

  // اطلاعات ثبت‌نام و ورود
  password      String

  // اطلاعات پروفایل
  gender        String?
  birthDate     DateTime?
  province      String?
  city          String?

  // ⭐⭐ فیلد جدید — مرحله زندگی کاربر
  lifeStage String? @default("user")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  children      Child[]
  savedArticles SavedArticle[]
}

// مدل کودک
model Child {
  id          Int        @id @default(autoincrement())
  userId      Int
  fullName    String?
  gender      String?
  birthDate   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id])
  growth      GrowthMetric[]
  testResults TestResult[]
}

// مدل اندازه‌گیری رشد کودک
model GrowthMetric {
  id          Int        @id @default(autoincrement())
  childId     Int
  height      Float?
  weight      Float?
  headCircumference Float?
  measuredAt  DateTime   @default(now())

  child       Child      @relation(fields: [childId], references: [id])
}

// مدل تست‌ها
model Test {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  category    String?
  createdAt   DateTime    @default(now())

  results     TestResult[]
}

// نتایج تست‌ها
model TestResult {
  id          Int        @id @default(autoincrement())
  testId      Int
  childId     Int
  resultValue String?
  score       Int?
  createdAt   DateTime   @default(now())

  test        Test        @relation(fields: [testId], references: [id])
  child       Child       @relation(fields: [childId], references: [id])
}

// مقالات ژنینو
model Article {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  category    String?
  image       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  savedBy     SavedArticle[]
}

// مقالات ذخیره‌شده توسط کاربران
model SavedArticle {
  id         Int      @id @default(autoincrement())
  userId     Int
  articleId  Int
  savedAt    DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  article    Article  @relation(fields: [articleId], references: [id])
}
